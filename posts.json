---
layout: null
---
{
  "posts": [
    {% for post in site.posts %}
    {
    "id": {{ forloop.index }},
    "title": {{ post.title | jsonify }},
    "url": {{ post.url | jsonify }},
    "date": {{ post.date | jsonify }},
    "excerpt": {{ post.excerpt | jsonify }},
    "content": {{ post.content | jsonify }},
    "tags": {{ post.tags | jsonify }}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
    {% endfor %}
  ]
}
